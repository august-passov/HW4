<div class="row">
  <% for post in @posts %>
    <div class="col-md-3 col-sm-6">
      <div>
        <h4>
          <% user = User.find_by({ "id" => post["user_id"] }) %>
          <% if user %>
            <%= user["username"] %>
          <% else %>
            anonymous
          <% end %>
        </h4>
        <img src="<%= post["image"] %>" class="img-fluid">
        <p><%= post["description"] %></p>
      </div>
    </div>
  <% end %>
</div>